                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_SAGA_Lunch_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Meal_SAGA_Dinner"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_SAGA_Dinner_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
        </TableLayout>
        
        <TextView
            android:id="@+id/DayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SAGA_Table"
            android:layout_centerHorizontal="true"
            android:text="@string/Hours_Placeholder_Text"
            android:textColor="@color/LeTournApp_color_yellow"
            android:textSize="18sp" />
        
        <Button
            android:layout_below="@+id/DayText"
            style="@style/MenuButton"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="@string/button_text_hours_change_day"
            android:onClick="changeDay" />
        
    </RelativeLayout>

</ScrollView>
