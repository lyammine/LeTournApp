<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LeTournApp_color_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swengr2_di_dj_ly.letournapp_v1_0.ScheduleHoursActivity" >

    <RelativeLayout
        android:id="@+id/masterRelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
        	android:id="@+id/ASC_Top_Label"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_alignParentTop="true"
        	android:layout_alignParentLeft="true"
        	android:layout_marginBottom="5dp"
        	android:textSize="20sp"
        	android:textColor="@color/LeTournApp_color_yellow"
        	android:text="@string/Building_ASC" />
        
        <TableLayout
            android:id="@+id/ASC_Table"
            android:layout_below="@+id/ASC_Top_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="25dp"
            android:background="@color/LeTournApp_color_yellow" >
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Room_ASC_Main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_ASC_Main_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Room_ASC_Hive"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_ASC_Hive_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Room_ASC_Coffee"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_ASC_Coffee_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Room_ASC_Mail"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_ASC_Mail_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
        </TableLayout>
        
        <TextView
        	android:id="@+id/Services_Top_Label"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="5dp"
        	android:layout_below="@+id/ASC_Table"
        	android:textSize="20sp"
        	android:textColor="@color/LeTournApp_color_yellow"
        	android:text="@string/Category_Services" />
        
        <TableLayout
