            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="25dp"
            android:background="@color/LeTournApp_color_yellow" >
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Subcat_Services_Library"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_Services_Library_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Subcat_Services_Registrar"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_Services_Registrar_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
