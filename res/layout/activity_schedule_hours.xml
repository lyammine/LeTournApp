                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Subcat_Services_FinancialAid"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_Services_FinancialAid_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Subcat_Services_Cashier"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_Services_Cashier_Hours"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Hours_Placeholder_Text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
                
            </TableRow>
            
       	</TableLayout>
       	
        <TextView
        	android:id="@+id/SAGA_Top_Label"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="5dp"
        	android:layout_below="@+id/Services_Table"
        	android:textSize="20sp"
        	android:textColor="@color/LeTournApp_color_yellow"
        	android:text="@string/Building_SAGA" />
        
        <TableLayout
            android:id="@+id/SAGA_Table"
            android:layout_below="@+id/SAGA_Top_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="25dp"
            android:background="@color/LeTournApp_color_yellow" >
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_row_border"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >
                
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="@string/Meal_SAGA_Breakfast"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left" />
                
                <TextView
                    android:id="@+id/Editable_SAGA_Breakfast_Hours"
                    android:textSize="18sp"
